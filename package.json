{
  "name": "ahnenbaum",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "packages/core",
    "packages/server",
    "packages/client"
  ],
  "scripts": {
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "dev": "echo \"Use 'npm run dev' in packages/server or packages/client\"",
    "clean": "rm -rf packages/*/dist packages/*/node_modules packages/*/.svelte-kit node_modules"
  },
  "lint-staged": {
    "*.{ts,js,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.5.0",
    "svelte-eslint-parser": "^1.5.1",
    "typescript-eslint": "^8.56.1"
  }
}
